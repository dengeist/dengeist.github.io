{
  "name": "dengeist.github.io",
  "version": "1.0.0",
  "description": "A personal portfolio",
  "main": "js/main.js",
  "dependencies": {},
  "devDependencies": {
    "gh-pages": "^0.11.0",
    "node-sass": "^3.8.0",
    "nodemon": "^1.9.2",
    "webpack": "^1.13.1",
    "webpack-dev-server": "^1.14.1"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "mkdir": "mkdir -p build",
    "clean": "rm -rf build",
    "build-html": "ditto index.html build/index.html",
    "watch-html":"chokidar './*.html' -c 'npm run build-html'",
    "build-css": "node-sass scss/main.scss build/css/main.css",
    "watch-css": "node-sass --watch scss/main.scss build/css/main.css",
    "build-js": "ditto js/ build/js",
    "watch-js": "chokidar 'js/*.js' -c 'npm run build-js'",
    "build": "npm run build-html && npm run build-css && npm run build-js",
    "watch": "npm run build && npm run watch-html & npm run watch-css & npm run watch-js",
    "serve": "webpack-dev-server --content-base build/",
    "start": "npm run watch & npm run serve"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dengeist/dengeist.github.io.git"
  },
  "author": "Elias Mason",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dengeist/dengeist.github.io/issues"
  },
  "homepage": "https://github.com/dengeist/dengeist.github.io#readme"
}
